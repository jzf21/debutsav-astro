---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/Hero/Hero";
import Footer from "../components/Footer/Footer";
import Sponsors from "../components/Sponsors/Sponsors";
import Navbar from "../components/Navbar/Navbar";
import Speakers from "../components/Speakers/Speakers";
import ContactUs from "../components/ContactUs/ContactUs";
import About from "../components/About/About";
import Button from "../components/Button/Button";
import CountdownTimer from "../components/Countdown/Countdown";
import EventDetails from "../components/EventDetails";
import WhyAttend from "../components/WhyAttend/WhyAttend";
import EventTimeline from "../components/Timeline/Timeline"
import Timeline from "../components/Timeline/SortedTimeline"
import EventsLayout from "../components/Timeline/EventTimeline"
---

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap");
  :root {
    font-family: "Poppins", sans-serif;

    font-weight: 400;

    color-scheme: light dark;
    color: rgb(0, 0, 0);
    background-color: #f0efef;

    font-synthesis: none;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-text-size-adjust: 100%;
  }
  h1 {
    line-height: 20px;
  }

  a:focus {
    outline: none;
    border: none;
  }

  .register {
    box-shadow: 2px 4px 4px #ea9fb3;
    border-radius: 50px;
  }

  .speakercard {
    border-radius: 50%;
  }
  .fossmec {
    background: linear-gradient(180deg, #fab416 0%, #ff8a00 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .countdown {
    font-weight: 700;
    font-size: 3.85rem;
    color: #ffffff;
    -webkit-text-stroke: 2px #cc1848;
  }
  .about-btn{
    box-shadow: 2px 4px 4px #ea9fb3;
    border-radius: 50px;
    
  }
  .about-btn:hover{
    scale: 0.98;
  }
</style>
<Layout title="DebUtsav | Kochi">
  <main>
    <Hero />
    <CountdownTimer
      targetDate={new Date("June 17, 2023 03:30:00").getTime()}
      client:only
    />
    <!-- <EventDetails /> -->
    <About />
    <Speakers client:load />
    <Sponsors />
    <WhyAttend />
    <EventsLayout/>

    
    <ContactUs />
    <Button />
  </main>
</Layout>
